{{>header}}
<title>Sign Up</title>
</head>

<body>
	{{>unauth_nav}}

	<main>
		<div id="content-wrap">
			<div class="card-body">
				{{#if error}}
				<div class="user-message user-message--error">{{error}}</div>
				{{/if}}
				<h1 class="card-title">Create an Account</h1>
				<form class="signup-form" action="/signup" method="POST">
					<div class="form-group">
						<label for="input-email">Email address:</label>
						<input type="email" id="input-email" name="email" class="form-control"
							placeholder="Type here your email">
					</div>
					<div class="form-group">
						<label for="input-username">Username:</label>
						<input type="text" id="input-username" name="username"
							class="form-control {{#if usernameExists}}is-invalid{{/if}}"
							placeholder="Choose your username" required>
						{{#if usernameExists}}
						<div class="invalid-feedback">"{{username}}" is already in use!</div>
						{{/if}}
					</div>
					<div class="form-group">
						<label for="input-password">Password:</label>
						<input type="password" id="input-password" name="password" class="form-control"
							placeholder="Type in your password" required>
					</div>
					<div class="form-group form-check">
						<input type="checkbox" id="welcome-checkbox" name="welcomeEmail" class="form-check-input"
							checked>
						<label class="form-check-label" for="welcome-checkbox">Send me a welcome email.</label>
					</div>
					<button type="submit" class="btn">Sign Up</button>
				</form>
			</div>

			<div class="form-footer">
				<p>
					This application will not store your email address in any database nor share it with anyone else.
					Your email address is used only to send you a welcome email, if you choose to do so.
				</p>
			</div>
		</div>

	</main>

	{{>footer}}